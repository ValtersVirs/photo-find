<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>
    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/puce</item>
    </style>

    <!-- TabLayout -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>
    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/puce</item>
        <item name="colorSurface">@color/beige</item>
        <item name="colorOnSurface">@color/puce</item>
    </style>

    <!-- Switch -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/orange</item>
        <item name="colorSecondary">@color/orange</item>
    </style>

    <!-- EditText -->
    <style name="Widget.App.EditText" parent="android:Widget.EditText">
        <item name="android:textColorHint">@color/puce_70</item>
        <item name="backgroundTint">@color/puce_70</item>
    </style>
    <style name="ThemeOverlay.App.EditText" parent="">
        <item name="android:textColorHint">@color/orange</item>
    </style>

    <!-- Alert Dialog -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/beige</item>
        <item name="colorOnSurface">@color/puce</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/puce</item>
    </style>
</resources>